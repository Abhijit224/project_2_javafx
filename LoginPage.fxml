<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.LoginPageController">
   <children>
      <ImageView fitHeight="242.0" fitWidth="314.0" layoutX="43.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../../../Public/Pictures/Sample%20Pictures/Penguins.jpg" />
         </image>
      </ImageView>
      <TextField fx:id="textUser" alignment="CENTER" layoutX="121.0" layoutY="259.0" promptText="User">
         <font>
            <Font name="Arial Black" size="12.0" />
         </font>
      </TextField>
      <PasswordField fx:id="textPassword" alignment="CENTER" layoutX="123.0" layoutY="302.0" prefHeight="25.0" prefWidth="158.0" promptText="Password">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </PasswordField>
      <Button fx:id="btnLogin" layoutX="66.0" layoutY="343.0" mnemonicParsing="false" onAction="#loginProsses" text="Login" />
      <Button layoutX="281.0" layoutY="343.0" mnemonicParsing="false" onAction="#exitProsses" prefHeight="25.0" prefWidth="46.0" text="Exit" />
   </children>
</AnchorPane>
